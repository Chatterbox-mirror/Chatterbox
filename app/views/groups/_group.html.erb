<tr class="searchable" data-index="<%= group.name.downcase %>" >
  <td>
    <img class="img-rounded group-logo-64-<%= group.id %>" src="<%= group.icon.thumb %>" width="20" height="20" />
    <%= link_to group.name, group %>
  </td>
  <td>
    <span>
      <img class="img-circle" src="<%= group.owner.gravatar %>" width="20" height="20">
      <%= group.owner.name rescue nil %>
    </span>
  </td>
<% if @category.nil? %>
	<td><%= group.category.name %></td>
<% end %>
  <td><%= group.topics.count %></td>
  <td><%= group.member_count %></td>
	<td><time class="timeago" datetime="<%= group.updated_at.iso8601 %>"><%= group.updated_at %></time></td>
</tr>
